<Window x:Class="PLWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <VisualBrush x:Key="backgroundGlobal">
            <VisualBrush.Visual>
                <Image Source="image/topnanny.jpg" />
            </VisualBrush.Visual>
        </VisualBrush>


    </Window.Resources>
    <Grid Background="{StaticResource backgroundGlobal}" ShowGridLines="true">

        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>




        <TextBox Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="24"  TextWrapping="Wrap" Text="WELCOME TO NANNY'CENTER "  VerticalAlignment="center" Width="172" Margin="0,25,0,10"/>
        <Button Content="Nanny" Grid.Column="1" HorizontalAlignment="center" Margin="10,66,1,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
        <Button Content="Mother" Grid.Column="2" HorizontalAlignment="Left" Margin="7,66,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
        <Button Content="Children" Grid.Column="3" HorizontalAlignment="Left" Margin="7,66,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
        <Button Content="Contract" Grid.Column="4" HorizontalAlignment="Left" Margin="1,66,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
        <Button Content="All Data" Grid.Column="2" HorizontalAlignment="Left" Margin="48,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2"/>
        <Button Content="About us" Grid.Column="2" HorizontalAlignment="Left" Margin="48,46,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
